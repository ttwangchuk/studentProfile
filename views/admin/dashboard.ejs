<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Sherubtse College</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header-content">
            <div class="logo-section">
                <img src="/img/logo.jpg" alt="Sherubtse College Logo" class="logo">
                <div>
                    <div class="logo-text">Sherubtse College</div>
                    <div class="college-subtitle">Admin Dashboard</div>
                </div>
            </div>
            <nav class="nav-links">
                <a href="/admin/dashboard" class="nav-btn">Dashboard</a>
                <a href="/admin/students" class="nav-btn">Students</a>
                <a href="/admin/add-student" class="nav-btn">Add Student</a>
                <a href="/logout" class="nav-btn">Logout</a>
            </nav>
        </div>
    </header>

    <div class="main-content">
        <div class="fade-in-up">
            <h1 style="margin-bottom: 2rem; color: var(--gray-900);">
                Welcome to Admin Dashboard 👋
            </h1>

            <% if (message) { %>
                <div class="alert alert-success">
                    <%= message %>
                </div>
            <% } %>

            <!-- Statistics Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number"><%= totalStudents %></div>
                    <div class="stat-label">Total Students</div>
                </div>
                <div class="stat-card dept-science">
                    <div class="stat-number" style="color: var(--sherubtse-green);"><%= activeStudents %></div>
                    <div class="stat-label">Active Students</div>
                </div>
                <div class="stat-card dept-arts">
                    <div class="stat-number" style="color: var(--sherubtse-gold);"><%= totalStudents - activeStudents %></div>
                    <div class="stat-label">Inactive Students</div>
                </div>
                <div class="stat-card dept-commerce">
                    <div class="stat-number" style="color: var(--accent-color);"><%= departments.length %></div>
                    <div class="stat-label">Departments</div>
                </div>
            </div>

            <div class="grid grid-2">
                <!-- Department Statistics -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Students by Department</h3>
                    </div>
                    <div class="card-body">
                        <% if (departments.length > 0) { %>
                            <div style="display: flex; flex-direction: column; gap: 1rem;">
                                <% departments.forEach(dept => { %>
                                    <div style="display: flex; align-items: center; justify-content: space-between; padding: 0.75rem; background: var(--gray-50); border-radius: var(--border-radius);">
                                        <div style="font-weight: 500; color: var(--gray-900);">
                                            <%= dept.department %>
                                        </div>
                                        <span class="badge badge-info">
                                            <%= dept.count %> students
                                        </span>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div style="text-align: center; padding: 2rem; color: var(--gray-500);">
                                <div style="font-size: 2rem; margin-bottom: 1rem;">📊</div>
                                <p>No department data available.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Recent Students -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Recent Student Registrations</h3>
                    </div>
                    <div class="card-body">
                        <% if (recentStudents.length > 0) { %>
                            <div style="display: flex; flex-direction: column; gap: 1rem;">
                                <% recentStudents.forEach(student => { %>
                                    <div style="display: flex; align-items: center; justify-content: space-between; padding: 0.75rem; background: var(--gray-50); border-radius: var(--border-radius);">
                                        <div>
                                            <div style="font-weight: 500; color: var(--gray-900);">
                                                <%= student.first_name %> <%= student.last_name %>
                                            </div>
                                            <div style="font-size: 0.875rem; color: var(--gray-600);">
                                                <%= student.student_id %> • <%= student.department || 'No department' %>
                                            </div>
                                        </div>
                                        <span class="badge badge-<%= student.status === 'active' ? 'success' : 'warning' %>">
                                            <%= student.status || 'active' %>
                                        </span>
                                    </div>
                                <% }) %>
                            </div>
                            <div style="text-align: center; margin-top: 1rem;">
                                <a href="/admin/students" class="btn btn-outline-primary">View All Students</a>
                            </div>
                        <% } else { %>
                            <div style="text-align: center; padding: 2rem; color: var(--gray-500);">
                                <div style="font-size: 2rem; margin-bottom: 1rem;">👥</div>
                                <p>No students registered yet.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card" style="margin-top: 2rem;">
                <div class="card-header">
                    <h3 class="card-title">Quick Actions</h3>
                </div>
                <div class="card-body">
                    <div class="grid grid-4">
                        <a href="/admin/add-student" class="btn btn-primary" style="justify-content: flex-start; padding: 1rem;">
                            <span style="margin-right: 0.5rem;">➕</span>
                            Add New Student
                        </a>
                        
                        <a href="/admin/students" class="btn btn-outline-primary" style="justify-content: flex-start; padding: 1rem;">
                            <span style="margin-right: 0.5rem;">👥</span>
                            Manage Students
                        </a>
                        
                        <button class="btn btn-outline" style="justify-content: flex-start; padding: 1rem;" disabled>
                            <span style="margin-right: 0.5rem;">📊</span>
                            Generate Reports
                        </button>
                        
                        <button class="btn btn-outline" style="justify-content: flex-start; padding: 1rem;" disabled>
                            <span style="margin-right: 0.5rem;">⚙️</span>
                            System Settings
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
